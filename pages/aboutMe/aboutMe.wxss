/* pages/aboutMe/aboutMe.wxss */

.page.about-me {
  margin: 30rpx;
  padding: 8rpx 30rpx 30rpx;
  background: #fff;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.02);
  border-radius: 5rpx;
}

.title {
 font-size: 40rpx;
 font-weight: bold;
 border-bottom: 1px solid #e4e4e4;
 color: #555555;
 margin: 20rpx 0 5rpx 0;
}

.paragragh {
  font-size: 32rpx;
  line-height: 1.4;
  margin: 20rpx 0;
  font-family: Calibri;
  letter-spacing: 1rpx;
}

.paragragh::after {
  content: "\20";
  position: absolute;
  left: -26rpx;
  top: 14rpx;
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background: #666666;
}

.list {
padding-left: 10rpx;
}
.list-title {
font-size: 32rpx;
font-family: Calibri;
margin-top: 20rpx
}

.list .list-item {
  padding-left: 60rpx;
  font-size: 32rpx;
  font-family: Calibri;
  line-height: 1.3;
  margin-bottom: 5rpx;
  position: relative; 
}

.list .list-item::after {
  content: "\20";
  position: absolute;
  left: 20rpx;
  top: 14rpx;
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background: #666666;
}

.copyright {
font-size: 20rpx;
margin:40rpx 0 10rpx 0;
}

.copyright .link{
  color: #096dd9;
  border-bottom: 1px,solid,#096dd9;
}
