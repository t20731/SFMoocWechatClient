.page {
  padding: 0 20rpx 10rpx;
  background: #fff;
}

.flex-item {
  margin-bottom: 40rpx;
  font-size: 14px;
}

.session-detail-header {
  position: relative;
  width: 100%;
  background: #fff;
}

.session-header-bg {
  width: 100%;
}

.session-avatar-wrapper {
  position: absolute;
  left: 26rpx;
  bottom: 92rpx;
  width: 60px;
  height: 60px;
  border: 4px #fff solid;
  border-radius: 5px;
  background: #fff;
}

.event-detail-avatar {
  width: 60px;
  height: 60px;
  border-radius: 5px;
}

.event-detail-nickname {
  position: absolute;
  left: 26rpx;
  bottom: 36rpx;
  font-size: 14px;
  color: #fff;
}

.session-detail-topic {
  font-size: 20px;
  font-weight: bold;
  display: flex;
  justify-content:space-between; 
}


.session-detail-topic image {
  height: 60rpx;
  width: 60rpx;
}

.flex-item view {
  font-weight: bold;
}

.flex-item text {
  font-size: 13px;
}

.session-detail-action .flex-item {
  margin-bottom: 10rpx;
}

