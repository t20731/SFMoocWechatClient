.uniformBtn {
  width: 100%;
}

.likeBtn {
  width: 40rpx;
  height: 40rpx;
}

button[disabled]:not([type]) {
  color:rgba(255, 255, 255, 0.6);
  background:#5B9CCB;
}
.reward {
  color: #0076cb;
  border: 1px solid #0076cb;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}
.reward image {
  width: 60rpx;
  height: 60rpx;
}

.flex-wrp {
  padding-bottom: 60rpx;
}
.footerBar{ 
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d8d8d8;
}

.weui-footer__links {
  display: flex;
  width: 100%;
}
.weui-footer__link {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 25%;
  margin: 0;
  padding: 0;
  text-align: center;
  font-size: 20rpx;
}

button[plain]{
  /* font-size: 34rpx; */
