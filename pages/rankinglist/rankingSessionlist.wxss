/* pages/rankinglist/rankingsessionlist.wxss */

.page {
  background: #fff;
}

.firstCol {
  margin: 20rpx;
  min-width: 1.25rem;
}

.leftContent {
  margin: 15 rpx;
}

.speaker_in_rank {
  font-size: 0.75rem;
}

.rightContent .title_in_rank text {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: rgb(0, 0, 0);
  line-height: 1.25rem;
}

.like {
  float: right;
  margin-right: 10rpx;
}

.like image {
  margin-right: 4rpx;
  width: 30rpx;
  height: 30rpx;
}

.like text {
  color: #FDBC40;
  font-size: 1.5rem;
}
