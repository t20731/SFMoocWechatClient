/* pages/rankinglist/rankingsessionlist.wxss */

.page {
  background: #fff;
}

.myRanking {
  margin-bottom: 1rem;
  background-color: #fff;
}

.firstCol {
  margin: 20rpx;
  min-width: 1.25rem;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.leftContent {
  margin: 15 rpx;
}

.speaker_in_rank {
  font-size: 0.75rem;
}

.rightContent .title_in_rank text {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: rgb(0, 0, 0);
  line-height: 1.25rem;
}

.like {
  float: right;
  margin-right: 10rpx;
}

.like image {
  margin-right: 4rpx;
  width: 50rpx;
  height: 50rpx;
}

.like text {
  color: rgba(253, 64, 64, 0.959);
  margin-bottom: 10rpx;
}
