.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 68rpx;
  height: 68rpx;
  margin: 20rpx; 
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.weui-cell__ft {
  color: #FDBC40;
  font-size: 1.5rem;
}

.page {
  background: #fff;
}

.firstCol {
  margin: 20rpx;
  min-width: 1.25rem;
}

.speaker_in_rank {
  font-size: 0.75rem;
}

.title_in_rank text {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: rgb(0, 0, 0);
  line-height: 1.25rem;
}

.like {
  float: right;
  margin-right: 10rpx;
}

.like image {
  margin-right: 4rpx;
  width: 30rpx;
  height: 30rpx;
}

.like text {
  color: #2894FF;
  font-size: 1.5rem;
}